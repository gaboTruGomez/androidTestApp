<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gabotrugomez.androidprototype.Activity.MenuActivity"
    android:weightSum="2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.3"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:background="@mipmap/altomobilelogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alto_mobile_text"
            android:textSize="20dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/rect_shadow"
            android:elevation="2dp">

            <!-- STEP 2 PROTOTYPE
            <ListView
                android:id="@+id/list_view_menu_activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp" />
            -->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_menu_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
